{
    "name": "Products",
    "description": "This view is intended for displaying the list of products.",
    "access": {
        "groups": ["pos.default.user", "sale.default.user"]
    },
    "order": "sku,product_model_id",
    "sort": "asc",
    "header": {
        "actions": {
            "ACTION.CREATE" : [
                {
                    "view": "form.create",
                    "description": "overload form to use for product creation"
                }
            ]
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "30%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "sku",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "label": "Product Model",
                "value": "product_model_id",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "is_pack",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "can_sell",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "family_id",
                "width": "10%"
            }
        ]
    }
}
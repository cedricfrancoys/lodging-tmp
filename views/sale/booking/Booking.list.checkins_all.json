{
    "name": "Booking list",
    "description": "List of bookings for which arrival is expected today.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "order": "created",
    "sort": "desc",
    "domain":[
        ["center_id", "in", "user.centers_ids"],
        ["is_cancelled", "=", false],
        ["nb_pers" ,">", 0],
        ["status", "in", ["validated", "confirmed", "checkedin"]]
    ],
    "controller": "lodging_booking_collect-arrivals",
    "header": {
        "selection": {
            "default": false
        },
        "actions": {
            "ACTION.CREATE" : false
        },
        "layout": {
        }
    },
    "exports": [
        {
            "id": "export.print.arrivals",
            "label": "Print Arrival listing",
            "icon": "print",
            "description": "Print arrivals for given dates and center.",
            "controller": "lodging_booking_print-arrivals",
            "view": "print.arrivals"
        }
    ],
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "0%",
                "visible": false
            },
            {
                "type": "field",
                "value": "name",
                "label": "reference",
                "width": "0%",
                "visible": false
            },
            {
                "type": "field",
                "value": "display_name",
                "width": "35%",
                "sortable": true
            },
            {
                "type": "field",
                "label": "From",
                "value": "date_from",
                "width": "15%",
                "readonly": true,
                "sortable": true
            },
            {
                "type": "field",
                "label": "To",
                "value": "date_to",
                "width": "15%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "status",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "alert",
                "width": "10%",
                "readonly": true,
                "sortable": true
            },
            {
                "type": "field",
                "label": "Customer",
                "value": "customer_id",
                "width": "20%"
            },
            {
                "type": "field",
                "label": "Type",
                "value": "type_id",
                "width": "10%",
                "readonly": true
            },
            {
                "type": "field",
                "label": "Center",
                "value": "center_id",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "label": "Nb Pers",
                "value": "nb_pers",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "label": "Price",
                "value": "price",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "paid_amount",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "payment_status",
                "width": "10%",
                "widget": {
                    "type": "string",
                    "usage": "icon",
                    "sortable": true,
                    "readonly": true
                }
            }
        ]
    }
}
{
    "name": "Funding",
    "description": "",
    "access": {
        "groups": ["booking.default.user"]
    },
    "routes": [
        {
            "id": "item.funding.booking.file",
            "label": "Fiche de réservation",
            "description": "",
            "icon": "library_books",
            "route": "/booking/object.booking_id",
            "context": {
                "entity": "lodging\\sale\\booking\\Booking",
                "view": "form.default",
                "domain": ["id", "=", "object.booking_id"]
            }
        },
        {
            "id": "item.funding.send",
            "label": "Envoi / Rappel",
            "description": "Envoyer la demande",
            "icon": "email",
            "route": "/booking/object.booking_id/funding/object.id/remind"
        },
        {
            "id": "item.funding.invoice",
            "label": "Créer une facture",
            "description": "",
            "icon": "file_copy",
            "route": "/booking/object.booking_id/funding/object.id/invoice",
            "visible": ["type", "=", "installment"]
        }
    ],
    "actions": [
        {
            "id": "action.mark_paid",
            "label": "Mark as paid",
            "description": "Funding will be arbitrary marked as paid (this has no impact on actual payments).",
            "controller": "lodging_funding_do-paid",
            "confirm": true,
            "access": {
                "groups": ["finance.default.administrator", "finance.default.user"]
            },
            "visible": ["is_paid", "=", false]
        },
        {
            "id": "action.mark_unpaid",
            "label": "Mark as non-paid",
            "description": "Funding will be arbitrary marked as non paid (this has no impact on actual payments).",
            "controller": "lodging_funding_do-unpaid",
            "confirm": true,
            "access": {
                "groups": ["finance.default.administrator", "finance.default.user"]
            },
            "visible": ["is_paid", "=", true]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "33%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "center_office_id",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "33%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.funding",
                        "label": "General Info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Booking",
                                                "value": "booking_id",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_paid",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "paid_amount",
                                                "width": "33%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "due_amount",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "due_date",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Payment Deadline",
                                                "value": "payment_deadline_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Invoice",
                                                "value": "invoice_id",
                                                "visible": true,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "payment_reference",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.payments",
                        "label": "Payments",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "payments_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
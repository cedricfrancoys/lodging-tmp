{
    "name": "Meals planning",
    "description": "List of scheduled meal (consumptions).",
    "access": {
        "groups": ["booking.default.user"]
    },
    "header": {
        "actions": {
            "ACTION.CREATE": false
        }
    },
    "group_by": [{"field": "date", "operation": ["SUM", "object.qty"]}, {"field": "time_slot_id", "operation": ["SUM", "object.qty"], "order": "id"}],
    "domain": [ ["center_id", "in", "user.centers_ids"], ["is_meal", "=", true], ["disclaimed", "=", false] ],
    "limit": 500,
    "order": "date",
    "controller": "lodging_consumption_collect-meals",
    "operations": {
        "total": {
            "qty": {
                "operation": "SUM",
                "usage": "number/integer"
            }
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "date",
                "width": "0%"
            },
            {
                "type": "field",
                "value": "time_slot_id",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "schedule_from",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "schedule_to",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "product_model_id",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "booking_id",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "customer_id",
                "width": "25%"
            },
            {
                "type": "field",
                "value": "description",
                "width": "25%"
            },
            {
                "type": "field",
                "value": "qty",
                "width": "10%"
            }
        ]
    }
}
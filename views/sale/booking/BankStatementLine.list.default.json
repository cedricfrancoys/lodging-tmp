{
    "name": "Bank Statement Lines",
    "description": "This view is intended for displaying the list of bank statement lines.",
    "access": {
        "groups": ["sale.default.user"]
    },
    "order": "created",
    "sort": "desc",
    "domain": ["center_office_id", "in", "user.center_offices_ids"],
    "controller": "lodging_sale_booking_bankStatementLine-collect",
    "header": {
        "actions": {
            "ACTION.CREATE" : false
        },
        "selection": {
            "default" : false,
            "actions" : [
                {
                    "id": "header.selection.actions.mark_ignored",
                    "label": "Mark as ignored",
                    "icon": "",
                    "controller": "lodging_sale_booking_bankstatementline_bulk-ignore"
                }
            ]
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "date",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "amount",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "account_holder",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "account_iban",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "structured_message",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "status",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "message",
                "width": "35%"
            }
        ]
    }
}
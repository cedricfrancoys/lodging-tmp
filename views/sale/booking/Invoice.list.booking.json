{
    "name": "Invoices",
    "description": "This view is intended for displaying the list of invoices within a Booking form.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "operations": {
        "total": {
            "display_price": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "20%"
            },
            {
                "type": "field",
                "label": "Booking",
                "value": "booking_id",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "date",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "type",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "status",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "is_deposit",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "is_paid",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "balance",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "display_price",
                "width": "15%"
            }
        ]
    }
}
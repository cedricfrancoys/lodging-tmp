{
    "name": "Booking",
    "description": "",
    "access": {
        "groups": ["booking.default.user"]
    },
    "header": {
        "actions": {
            "ACTION.SAVE": [
                {
                    "id": "SAVE_AND_CONTINUE"
                },
                {
                    "id": "SAVE_AND_CLOSE"
                }
            ]
        }
    },
    "actions": [
        {
            "id": "action.quote",
            "label": "Revert to Quote",
            "description": "Rental units will no longer be reserved and will be available for other bookings.",
            "controller": "lodging_booking_do-quote",
            "confirm": true,
            "visible": [ ["status", "in", ["option", "confirmed", "validated"]], ["is_from_channelmanager", "=", false] ]
        },
        {
            "id": "action.option",
            "label": "Set as Option",
            "description": "Rental units will be reserved but no funding will be claimed yet.",
            "controller": "lodging_booking_do-option",
            "confirm": true,
            "visible": ["status", "=", "quote"]
        },
        {
            "id": "action.option-confirm",
            "label": "Confirm Booking",
            "description": "Rental units will be reserved and the invoicing plan will be set up.",
            "controller": "lodging_booking_do-option-confirm",
            "confirm": true,
            "visible": [["status", "=", "quote"], ["is_price_tbc", "=", false]]
        },
        {
            "id": "action.confirm",
            "label": "Confirm Booking",
            "description": "Rental units will be reserved and the invoicing plan will be set up.",
            "controller": "lodging_booking_do-confirm",
            "confirm": true,
            "visible": [["status", "=", "option"], ["is_price_tbc", "=", false]]
        },
        {
            "id": "action.checkin",
            "label": "Check In",
            "description": "The host has arrived: the rental units will be marked as occupied.",
            "controller": "lodging_booking_do-checkin",
            "confirm": true,
            "visible": ["status", "in", ["confirmed", "validated"]]
        },
        {
            "id": "action.checkout",
            "label": "Check Out",
            "description": "The host is leaving: the rental units will be marked for cleaning.",
            "controller": "lodging_booking_do-checkout",
            "confirm": true,
            "visible": ["status", "in", ["checkedin"]]
        },
        {
            "id": "action.invoice",
            "label": "Invoice",
            "description": "All additional consumptions have been added. A proforma invoice will be generated.",
            "controller": "lodging_booking_do-invoice",
            "confirm": true,
            "visible": [["status", "=", "checkedout"], ["is_from_channelmanager", "=", false] ]
        },
        {
            "id": "action.invoice_direct",
            "label": "Invoice",
            "description": "Everything will be invoiced to the booking customer (no alternate payer). A proforma invoice will be generated.",
            "controller": "lodging_booking_do-invoice-direct",
            "confirm": true,
            "visible": [["status", "=", "checkedout"], ["is_from_channelmanager", "=", true] ]
        },
        {
            "id": "action.invoice_instant",
            "label": "Instant invoice",
            "description": "This will complete the fundings with a manual payment (card) and fundings will be marked as paid.",
            "controller": "lodging_booking_do-invoice-instant",
            "confirm": true,
            "visible": [
                [ ["status", "=", "checkedout"], ["is_from_channelmanager", "=", true] ],
                [ ["status", "=", "checkedout"], ["nb_pers", "<=", 9] ]
            ]
        },
        {
            "id": "action.invoice-back",
            "label": "Back to Check Out",
            "description": "Adaptations are still required and the proforma invoice will have to be regenerated.",
            "controller": "lodging_booking_do-checkout",
            "confirm": true,
            "visible": [["is_invoiced", "=", false], ["status", "in", ["invoiced", "debit_balance", "credit_balance", "balanced"]]]
        },
        {
            "id": "action.cancel",
            "label": "Cancel",
            "description": "The booking will be cancelled and rental units will be freed. Possible cancellation fee will be applied.",
            "controller": "lodging_booking_do-cancel",
            "params": {
                "id": "object.id"
            },
            "confirm": true,
            "visible": [ ["status", "not in", ["invoiced", "debit_balance", "credit_balance", "balanced"]], ["is_from_channelmanager", "=", false] ]
        },
        {
            "id": "action.release-rentalunits",
            "label": "Release rental units",
            "description": "Rental units will be released if they haven't been yet.",
            "controller": "lodging_booking_release-rentalunits",
            "confirm": true,
            "visible": ["status", "=", "quote"]
        },
        {
            "id": "action.pay_instant",
            "label": "Instant payment",
            "description": "This will complete the fundings with a manual payment (card) and fundings will be marked as paid.",
            "controller": "lodging_booking_do-pay-instant",
            "confirm": true,
            "visible": [ ["status", "in", ["debit_balance", "credit_balance"]] ]
        },
        {
            "id": "action.reimbursed",
            "label": "Mark as reimbursed",
            "description": "The booking will be closed and marked as balanced (the amount already paid by the customer has been reimbursed).",
            "controller": "lodging_booking_reimbursed",
            "visible": ["status", "=", "credit_balance"]
        },
        {
            "id": "action.update-status",
            "label": "Update status",
            "description": "The status of the booking will be adapted according to the status of its fundings.",
            "controller": "lodging_booking_update-status",
            "visible": [ ["status", "in", ["invoiced", "debit_balance", "credit_balance"]] ]
        },
        {
            "id": "action.import-contacts",
            "label": "Import contacts",
            "description": "The contacts from the selected customer will be (re) imported to the booking.",
            "controller": "lodging_booking_import-contacts",
            "params": {
                "id": "object.id"
            },
            "confirm": true
        }
    ],
    "routes": [
        {
            "id": "item.booking.file",
            "label": "Booking form",
            "description": "",
            "icon": "library_books",
            "route": "/booking/object.id",
            "context": {
                "entity": "lodging\\sale\\booking\\Booking",
                "view": "form.default",
                "domain": ["id", "=", "object.id"],
                "reset": true
            }
        },
        {
            "id": "item.booking.edit",
            "label": "Booked services",
            "description": "",
            "icon": "room_service",
            "route": "/booking/object.id/services"
        },
        {
            "id": "item.booking.composition",
            "label": "Hosts details",
            "description": "",
            "icon": "view_list",
            "route": "/booking/object.id/composition",
            "visible": ["status", "not in", ["quote", "option"]]
        },
        {
            "id": "item.booking.contract",
            "label": "Send contract",
            "description": "",
            "icon": "drive_file_rename_outline",
            "route": "/booking/object.id/contract",
            "visible": [["has_contract", "=", true], ["status", "=", "confirmed"]]
        },
        {
            "id": "item.booking.quote",
            "label": "Send quote",
            "description": "",
            "icon": "drive_file_rename_outline",
            "route": "/booking/object.id/quote",
            "visible": ["status", "in", ["quote"]]
        },
        {
            "id": "item.booking.option",
            "label": "Send option",
            "description": "",
            "icon": "drive_file_rename_outline",
            "route": "/booking/object.id/option",
            "visible": ["status", "in", ["option"]]
        },
        {
            "id": "item.booking.consumptions",
            "label": "Consumptions",
            "description": "",
            "icon": "calendar_today",
            "route": "/booking/object.id",
            "context": {
                "entity": "lodging\\sale\\booking\\Consumption",
                "view": "list.default",
                "domain": ["booking_id", "=", "object.id"],
                "target_entity": "lodging\\sale\\booking\\Booking",
                "target_view": "form.default"
            },
            "visible": ["status", "<>", "quote"]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "75%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "name",
                                                "width": "0%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "nb_pers",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "display_name",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "type_id",
                                                "width": "25%",
                                                "widget": {
                                                    "readonly": true,
                                                    "header": false
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "price",
                                                "width": "20%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_expiry",
                                                "width": "25%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_noexpiry",
                                                "width": "50%",
                                                "visible": ["is_noexpiry", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_price_tbc",
                                                "width": "50%",
                                                "visible": ["is_price_tbc", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_from_channelmanager",
                                                "label": "channel manager",
                                                "width": "33%",
                                                "visible": ["is_from_channelmanager", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "extref_reservation_id",
                                                "label": "Channel manager ID",
                                                "width": "33%",
                                                "visible": ["is_from_channelmanager", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "guarantee_id",
                                                "label": "Guarantee",
                                                "width": "33%",
                                                "visible": ["is_from_channelmanager", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_cancelled",
                                                "width": "50%",
                                                "visible": ["is_cancelled", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "25%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "date_from",
                                                "width": "50%",
                                                "widget": {
                                                    "usage": "date/plain.short.day",
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_to",
                                                "width": "50%",
                                                "widget": {
                                                    "usage": "date/plain.short.day",
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "time_from",
                                                "width": "50%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "time_to",
                                                "width": "50%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.booking_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Center",
                                                "value": "center_id",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_identity_id",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": ["id", ">", 4],
                                                    "limit": 8
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "center_office_id",
                                                "visible": false,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "organisation_id",
                                                "visible": false,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "visible": false,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_invoiced",
                                                "visible": false,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "paid_amount",
                                                "visible": false,
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Via Tour Operator?",
                                                "value": "has_tour_operator",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Tour Operator",
                                                "value": "tour_operator_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "tour_operator_ref",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contacts",
                        "id": "section.booking_contacts",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contacts_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contracts",
                        "id": "section.booking_contracts",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contracts_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "order": "created",
                                                    "sort": "desc",
                                                    "header": {
                                                        "selection": {
                                                            "default" : false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Consumptions",
                        "id": "section.booking_consumptions",
                        "comment": "#memo - this property has been removed to allow user to see non-freed rental units - \"visible\": [\"status\", \"<>\", \"quote\"]",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "consumptions_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "selection": {
                                                            "default" : false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Composition",
                        "id": "section.booking_composition",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "composition_items_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Fundings",
                        "id": "section.booking_fundings",
                        "visible": [ [["status", "not in", ["quote", "option"]]], [["is_cancelled", "=", true]], [["paid_amount", ">", 0]] ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "payment_plan_id",
                                                "width": "75%",
                                                "visible": ["payment_plan_id", "<>", null],
                                                "widget": {
                                                    "readonly": true,
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.OPEN": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "display_payment_reference",
                                                "width": "50%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "fundings_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.booking",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": [ {
                                                                "view": "form.create",
                                                                "domain": [ ["center_office_id", "=", "object.center_office_id"], ["booking_id", "=", "object.booking_id"] ]
                                                            } ]
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Invoices",
                        "id": "section.booking_invoices",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.booking",
                                                    "header": {
                                                        "selection": {
                                                            "default" : false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Mails",
                        "id": "section.mails",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "mails_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "selection": {
                                                            "default" : false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
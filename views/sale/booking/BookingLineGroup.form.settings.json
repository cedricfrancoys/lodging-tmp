                                            },
                                            {
                                                "type": "field",
                                                "value": "is_sojourn",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_event",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_consumptions",
                                                "width": "50%",
                                                "visible": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_locked_rental_units",

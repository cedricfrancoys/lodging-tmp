{
    "name": "Booking",
    "description": "",
    "access": {
        "groups": ["booking.default.user"]
    },
    "header": {
        "actions": {
            "ACTION.SAVE": [
                {
                    "id": "SAVE_AND_EDIT" ,
                    "view": "form.default",
                    "controller": "lodging_booking_update"
                },
                {
                    "id": "SAVE_AND_VIEW"
                }
            ]
        }
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.booking_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Center",
                                                "value": "center_id",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": ["id", "in", "user.centers_ids"],
                                                    "limit": 30,
                                                    "header": {
                                                        "actions":{
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_identity_id",
                                                "width": "50%",
                                                "widget": {
                                                    "view": "form.create",
                                                    "domain": ["id", ">", 4],
                                                    "limit": 8
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer Nature",
                                                "value": "customer_nature_id",
                                                "width": "50%",
                                                "widget":{
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "width": "25%",
                                                "visible": false
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "25%",
                                                "visible": false
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_from",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_to",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Via Tour Operator?",
                                                "value": "has_tour_operator",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Tour Operator",
                                                "value": "tour_operator_id",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "tour_operator_ref",
                                                "width": "33%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
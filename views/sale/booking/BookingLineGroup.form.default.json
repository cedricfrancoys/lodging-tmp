{
    "name": "Booking Line Group",
    "description": "Booking line groups are related to a booking and describe one or more sojourns and their related consumptions.",
    "access": {
        "groups": ["booking.default.user"]
     },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.bookinglineGroup_section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "order",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_locked",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_pack",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "pack_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "nb_pers",
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "33%",
                                        "align": "left",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "date_from",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_to",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "booking_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "price_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "rate_class_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Booking Lines",
                        "id": "section.bookingLines_section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "booking_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Price Adapters",
                        "id": "section.priceAdapters_section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "price_adapters_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Accomodations",
                        "id": "section.accomodation_section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "accomodations_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Consumptions",
                        "id": "section.consumptions_section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "consumptions_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
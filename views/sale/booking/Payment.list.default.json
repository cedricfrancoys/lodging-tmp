{
    "name": "Payments",
    "description": "This view is intended for displaying the list of Payments.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "header": {
        "actions": {
            "ACTION.CREATE": false
        }
    },
    "domain": ["center_office_id", "in", "user.center_offices_ids"],
    "controller": "lodging_sale_booking_payment-collect",
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "partner_id",
                "width": "20%",
                "sortable": true

            },
            {
                "type": "field",
                "value": "amount",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "receipt_date",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "payment_origin",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "payment_method",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "statement_line_id",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "is_exported",
                "width": "20%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "funding_id",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "invoice_id",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "booking_id",
                "width": "20%",
                "sortable": true
            }
        ]
    }
}
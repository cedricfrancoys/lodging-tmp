{
    "name": "Cleanups planning",
    "description": "List of forecasted cleanups (consumptions).",
    "access": {
        "groups": ["booking.default.user"]
    },
    "header": {
        "selection": {
            "default": false,
            "actions" : [
                {
                    "id": "action.bulk.cleaned",
                    "icon": "cleaning_services",
                    "label": "Marquer Nettoy√©",
                    "description": "Rentals units will be marked as cleaned.",
                    "controller": "lodging_booking_bulk-cleaned",
                    "confirm": true
                }
            ]
        },
        "actions": {
            "ACTION.CREATE": false
        }
    },
    "group_by": [{"field": "date", "operation": ["COUNT", "object.rental_unit_id"]}],
    "order": "date",
    "sort": "asc",
    "domain": [ ["center_id", "in", "user.centers_ids"], ["is_accomodation", "=", true], ["cleanup_type", "<>", "none"], ["type", "=", "book"] ],
    "operations": {
        "total": {
            "rental_unit_id": {
                "operation": "COUNT",
                "usage": "numeric/integer"
            }
        }
    },
    "limit": 500,
    "controller": "lodging_consumption_collect-clean",
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "date",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "rental_unit_id",
                "width": "25%"
            },
            {
                "type": "field",
                "value": "booking_id",
                "width": "15%"
            },
            {
                "type": "field",
                "value": "customer_id",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "cleanup_type",
                "width": "40%"
            }
        ]
    }
}
{
    "name": "Invoices",
    "description": "This view is intended for displaying the invoices.",
    "access": {
        "groups": ["finance.default.user", "sale.default.user"]
    },
    "order": "date",
    "sort": "desc",
    "domain": [["has_orders", "=", true], ["center_office_id", "in", "user.center_offices_ids"]],
    "header": {
        "selection": false,
        "actions": {
            "ACTION.CREATE": false
        }
    },
    "controller": "lodging_sale_booking_invoice-collect",
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "date",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "center_office_id",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "partner_id",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "type",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "status",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "is_paid",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "is_exported",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "display_price",
                "width": "15%"
            }
        ]
    }
}
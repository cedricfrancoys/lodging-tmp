{
    "name": "Booking",
    "description": "",
    "access": {
        "groups": ["booking.default.user"]
    },
    "header": {
        "actions": {
            "ACTION.EDIT": false
        }
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "name",
                                                "width": "33%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "visible": false,
                                                "width": "0%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "type_id",
                                                "width": "33%",
                                                "widget": {
                                                    "readonly": true,
                                                    "header": false
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "price",
                                                "width": "33%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_noexpiry",
                                                "width": "50%",
                                                "visible": ["is_noexpiry", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_price_tbc",
                                                "width": "50%",
                                                "visible": ["is_price_tbc", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_from_channelmanager",
                                                "label": "channel manager",
                                                "width": "33%",
                                                "visible": ["is_from_channelmanager", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "extref_reservation_id",
                                                "label": "Channel manager ID",
                                                "width": "33%",
                                                "visible": ["is_from_channelmanager", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "guarantee_id",
                                                "label": "Guarantee",
                                                "width": "33%",
                                                "visible": ["is_from_channelmanager", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_cancelled",
                                                "width": "50%",
                                                "visible": ["is_cancelled", "=", true],
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_from",
                                                "width": "25%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_to",
                                                "width": "25%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "time_from",
                                                "width": "25%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "time_to",
                                                "width": "25%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.booking_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Center",
                                                "value": "center_id",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Customer",
                                                "value": "customer_identity_id",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": ["id", ">", 4],
                                                    "limit": 8
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "center_office_id",
                                                "visible": false,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "customer_id",
                                                "visible": false,
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_invoiced",
                                                "visible": false,
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Via Tour Operator?",
                                                "value": "has_tour_operator",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Tour Operator",
                                                "value": "tour_operator_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Reference",
                                                "value": "tour_operator_ref",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contacts",
                        "id": "section.booking_contacts",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contacts_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Contracts",
                        "id": "section.booking_contracts",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "contracts_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "order": "created",
                                                    "sort": "desc",
                                                    "header": {
                                                        "selection": {
                                                            "default" : false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Consumptions",
                        "id": "section.booking_consumptions",
                        "comment": "#memo - this property has been removed to allow user to see non-freed rental units - \"visible\": [\"status\", \"<>\", \"quote\"]",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "consumptions_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "selection": {
                                                            "default" : false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Composition",
                        "id": "section.booking_composition",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "composition_items_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Fundings",
                        "id": "section.booking_fundings",
                        "visible": [ [["status", "not in", ["quote", "option"]]], [["is_cancelled", "=", true]] ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "payment_plan_id",
                                                "width": "50%",
                                                "visible": ["payment_plan_id", "<>", null],
                                                "widget": {
                                                    "readonly": true,
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.OPEN": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "fundings_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.booking",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": [ {
                                                                "view": "form.create",
                                                                "domain": [ ["center_office_id", "=", "object.center_office_id"], ["booking_id", "=", "object.booking_id"] ]
                                                            } ]
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Invoices",
                        "id": "section.booking_invoices",
                        "visible": ["status", "not in", ["quote", "option"]],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "invoices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.booking",
                                                    "header": {
                                                        "selection": {
                                                            "default" : false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Mails",
                        "id": "section.mails",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "mails_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "selection": {
                                                            "default" : false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
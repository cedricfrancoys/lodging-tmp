{
    "name": "Booking list",
    "description": "This view displays the list of bookings : the most recent on top.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "order": "created",
    "sort": "desc",
    "domain":[
            [ ["center_office_id", "in", "user.center_offices_ids"],["status", "=", "checkedout"], ["is_from_channelmanager", "=", true] ],
            [ ["center_office_id", "in", "user.center_offices_ids"],["status", "=", "checkedout"], ["nb_pers", "<=", 9] ]
    ],
    "controller": "lodging_booking_collect",
    "header": {
        "selection": {
            "default": false,
            "actions" : [
                {
                    "id": "archive_bulk",
                    "label": "Archiver",
                    "icon": "archive",
                    "controller": "lodging_booking_bulk-archive",
                    "confirm": true
                },
                {
                    "id": "update_booking_bulk",
                    "label": "Mettre Ã  jour le status",
                    "icon": "update",
                    "controller": "lodging_booking_bulk-update-status",
                    "confirm": true
                },
                {
                    "id": "invoice_bulk",
                    "label": "Facture rapide",
                    "icon": "receipt",
                    "controller": "lodging_booking_bulk-invoice",
                    "confirm": true
                }
            ]
        },
        "actions": {
            "ACTION.CREATE" : false
        },
        "layout": {
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "label": "reference",
                "width": "0%",
                "visible": false
            },
            {
                "type": "field",
                "value": "display_name",
                "width": "33%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "created",
                "width": "15%",
                "sortable": true,
                "widget": {
                    "usage": "datetime/short"
                }
            },
            {
                "type": "field",
                "label": "From",
                "value": "date_from",
                "width": "10%",
                "readonly": true,
                "sortable": true
            },
            {
                "type": "field",
                "label": "To",
                "value": "date_to",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "status",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "alert",
                "width": "10%",
                "readonly": true,
                "sortable": true
            },
            {
                "type": "field",
                "label": "Customer",
                "value": "customer_id",
                "width": "20%"
            },
            {
                "type": "field",
                "label": "Type",
                "value": "type_id",
                "width": "10%",
                "readonly": true
            },
            {
                "type": "field",
                "label": "Cancelled",
                "value": "is_cancelled",
                "width": "10%",
                "readonly": true
            },
            {
                "type": "field",
                "label": "Center",
                "value": "center_id",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "label": "Nb Pers",
                "value": "nb_pers",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "label": "Price",
                "value": "price",
                "width": "15%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "paid_amount",
                "width": "10%",
                "sortable": true,
                "readonly": true
            },
            {
                "type": "field",
                "value": "payment_status",
                "width": "10%",
                "widget": {
                    "type": "string",
                    "usage": "icon",
                    "sortable": true,
                    "readonly": true
                }
            }
        ]
    }
}
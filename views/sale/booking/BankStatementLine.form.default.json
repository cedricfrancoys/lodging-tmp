{
    "name": "Bank Statement Line",
    "description": "",
    "access": {
        "groups": ["sale.default.user"]
    },
    "header": {
        "actions": {
            "ACTION.EDIT": true,
            "ACTION.SAVE": [{"id": "SAVE_AND_EDIT"},{"id": "SAVE_AND_CLOSE"}]
        }
    },
    "actions": [
        {
            "id": "action.reconcile",
            "label": "Reconcile",
            "description": "Retry to auto-reconcile the statement line.",
            "controller": "lodging_sale_pay_bankstatementline_do-reconcile",
            "confirm": true,
            "params": {
                "id": "object.id"
            },
            "visible": ["status", "<>", "reconciled"]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "label": "Bank Statement",
                                                "value": "bank_statement_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "amount",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "remaining_amount",
                                                "visible": false,
                                                "width": "0"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "33%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "message",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "structured_message",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "account_iban",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "account_holder",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "payments_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.statement",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": [ {
                                                                "domain": [ ["amount", "=", "object.remaining_amount"], ["receipt_date", "=", "object.date"] ]
                                                            } ]
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
{
    "name": "Order",
    "description": "Point of Sale order.",
    "access": {
        "groups": ["pos.default.user"]
    },
    "routes": [
        {
            "id": "item.order.ticket",
            "label": "Ticket",
            "description": "",
            "icon": "list_alt",
            "route": "/session/object.session_id/order/object.id/ticket",
            "visible": ["status", "=", "paid"]
        }
    ],
    "header": {
        "actions": {
            "ACTION.CREATE": false,
            "ACTION.EDIT": false
        }
    },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Session",
                                                "value": "session_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_funding",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Funding",
                                                "value": "funding_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Has invoice",
                                                "value": "has_invoice",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Invoice",
                                                "value": "invoice_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.order_lines",
                        "label": "Order Lines",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "order_lines_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "selection": {
                                                            "default": false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.EDIT": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.payments",
                        "label": "Payments",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "order_payments_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "selection": {
                                                            "default": false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false,
                                                            "ACTION.EDIT": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}

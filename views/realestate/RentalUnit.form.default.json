{
    "name": "Rental Units",
    "description": "A rental unit is a resource that can be rented to a customer.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "actions": [
        {
            "id": "action.cleaned",
            "label": "Mark as cleaned",
            "description": "Rental unit will be marked as none.",
            "controller": "lodging_realestate_do-cleaned",
            "confirm": true,
            "visible": ["action_required", "in", ["cleanup_daily","cleanup_full"]]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "General Info",
                        "id": "section.rental_units",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "code",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Center",
                                                "value": "center_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Rentable",
                                                "value": "can_rent",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Accomodation",
                                                "value": "is_accomodation",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Sojourn Type",
                                                "value": "sojourn_type_id",
                                                "width": "50%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "rental_unit_category_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "action_required",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "capacity",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Parent",
                                                "value": "parent_id",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Children",
                                                "value": "has_children",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Partial rent?",
                                                "value": "can_partial_rent",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "order",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "color",
                                                "width": "33%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Children",
                        "id": "section.children_section",
                        "visible": ["has_children", "=", true],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "children_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.SELECT": true
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Repairs",
                        "id": "section.repairs",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "repairs_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": ["type", "=", "ooo"],
                                                    "order": "date",
                                                    "sort": "desc"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}